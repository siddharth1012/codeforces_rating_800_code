#include<bits/stdc++.h>
using namespace std;

int main()
{
    long long int n, k;
    cin >> n >> k;
    
    if(k > n)
        return 0;
    
    if(n%2)
    {
        if(k > (n/2)+1)
        {
            k -= ((n/2)+1);
            cout << 2*k;
            return 0;
        }
        else
        {
            cout << (2*k)-1;
            return 0;
        }
    }
    else
    {
        if(k > (n/2))
        {
            k -= n/2;
            cout << 2*k;
            return 0;
        }
        else
        {
            cout << (2*k)-1;
            return 0;
        }
    }
    return 0;
    
}
