#include<iostream>
#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin >> n;
    int x = 0;
    
    for(int i = 0; i < n; i++)
    {
        string temp;
        cin >> temp;
        if(temp[0] == '+')
            ++x;
        else if(temp[2] == '+')
            x++;
        else if(temp[0] == '-')
            --x;
        else
            x--;
    }
    
    cout << x;
    return 0;
    
}
